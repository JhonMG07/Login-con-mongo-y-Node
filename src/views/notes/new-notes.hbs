<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3> Nota nueva</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion"> </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block"> <!-- Para que ocupe todo el ancho de la tarjeta-->
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>