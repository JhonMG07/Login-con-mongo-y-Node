{{#if success_msg}}

<div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 50%; left:25%;">
    <strong>{{success_msg}}</strong>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{{/if}}

{{#if error_msg}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 50%; left:25%;">
    <strong>{{error_msg}}</strong>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{{/if}}