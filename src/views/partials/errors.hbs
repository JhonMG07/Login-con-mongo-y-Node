{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 50%; left:25%;">
    {{error}}
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 50%; left:25%;">
    <strong>{{text}}</strong>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

{{/each}}



